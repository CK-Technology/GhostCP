# GhostCP Production Environment Configuration
# Copy this file to .env and customize for your deployment

# Database Configuration
DB_USER=ghostcp
DB_PASSWORD=your_secure_database_password_here
DB_NAME=ghostcp

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# Security Keys (Generate with openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here

# Application Configuration
LOG_LEVEL=info
DOMAIN=your-domain.com
ADMIN_EMAIL=admin@your-domain.com

# SSL/ACME Configuration
ACME_DIRECTORY_URL=https://acme-v02.api.letsencrypt.org/directory
# Use staging for testing: https://acme-staging-v02.api.letsencrypt.org/directory

# Backup Configuration (S3 Compatible)
BACKUP_AWS_ACCESS_KEY_ID=your_backup_access_key
BACKUP_AWS_SECRET_ACCESS_KEY=your_backup_secret_key
BACKUP_AWS_REGION=us-east-1
BACKUP_S3_BUCKET=your-backup-bucket

# Monitoring
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Mail Server Configuration
MAIL_HOSTNAME=mail.your-domain.com
DKIM_SELECTOR=default

# DNS Provider Configuration (Cloudflare example)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# PowerDNS Configuration (if using)
POWERDNS_API_URL=http://your-powerdns-server:8081
POWERDNS_API_KEY=your_powerdns_api_key

# SMTP Relay Configuration (SMTP2Go example)
SMTP_RELAY_HOST=mail.smtp2go.com
SMTP_RELAY_PORT=587
SMTP_RELAY_USERNAME=your_smtp2go_username
SMTP_RELAY_PASSWORD=your_smtp2go_password

# Webhook URLs for notifications
WEBHOOK_BACKUP_SUCCESS=https://your-webhook-url.com/backup-success
WEBHOOK_BACKUP_FAILURE=https://your-webhook-url.com/backup-failure
WEBHOOK_SYSTEM_ALERTS=https://your-webhook-url.com/system-alerts

# Resource Limits
MAX_CONCURRENT_BACKUPS=3
MAX_UPLOAD_SIZE=100M
SESSION_TIMEOUT=3600

# Feature Flags
ENABLE_WORDPRESS_MULTISITE=true
ENABLE_MAIL_SERVER=true
ENABLE_DNS_MANAGEMENT=true
ENABLE_BACKUP_SYSTEM=true
ENABLE_MONITORING=true
# Database
DATABASE_URL=postgresql://ghostcp:password@localhost/ghostcp

# Server
PORT=8080
JWT_SECRET=change-me-in-production

# Admin user (created on first run)
ADMIN_USER=admin
ADMIN_PASSWORD=admin

# System paths
TEMPLATES_DIR=/etc/ghostcp/templates
NGINX_CONFIG_DIR=/etc/nginx
SSL_CERTS_DIR=/etc/ghostcp/ssl
USER_HOME_DIR=/home

# DNS providers (optional)
CLOUDFLARE_API_TOKEN=
POWERDNS_API_URL=
POWERDNS_API_KEY=

# Mail settings
MAIL_SERVER_HOSTNAME=mail.example.com
DKIM_KEY_SIZE=2048

# Backup settings
DEFAULT_BACKUP_BACKEND=local
BACKUP_ENCRYPTION_KEY=change-me-in-production

# Security
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT_HOURS=24
MAX_LOGIN_ATTEMPTS=5

# Resources
DEFAULT_WEB_TEMPLATE=default
DEFAULT_PHP_VERSION=8.3
NGINX_WORKER_PROCESSES=auto

# Rust log level
RUST_LOG=ghostcp_api=debug,tower_http=debug